{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "name": "Transmission Desktop Client",
  "outputfilename": "Transmission Desktop Client",
  "frontend:install": "npm install",
  "frontend:build": "npm run build",
  "frontend:dev:watcher": "npm run dev",
  "frontend:dev:serverUrl": "auto",
  "author": {
    "name": "plizkinzmey",
    "email": "plizkinzmey@icloud.com"
  },
  "info": {
    "productName": "Transmission Desktop Client",
    "productVersion": "0.0.1",
    "fileAssociations": [
      {
        "ext": "torrent",
        "name": "BitTorrent File",
        "description": "BitTorrent File",
        "iconName": "appicon",
        "role": "Viewer"
      }
    ]
  },
  "windows": {
    "webviewIsTransparent": false,
    "backgroundColor": "#fff",
    "resizable": true,
    "minWidth": 800,
    "minHeight": 600,
    "frameless": false
  },
  "mac": {
    "windowIsTranslucent": false,
    "resizable": true,
    "minWidth": 800,
    "minHeight": 600,
    "frameless": false,
    "icon": "build/iconfile.icns"
  }
}